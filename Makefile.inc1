		${MAKE} DIRPRFX=${_tool}/ obj && \
		${MAKE} DIRPRFX=${_tool}/ depend && \
		${MAKE} DIRPRFX=${_tool}/ all && \
		${MAKE} DIRPRFX=${_tool}/ DESTDIR=${MAKEOBJDIRPREFIX}/legacy install

bootstrap-tools: ${_bt}-${_tool}
